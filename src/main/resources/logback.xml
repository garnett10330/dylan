<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <!-- 定义服务名称 -->
    <property name="SERVER_NAME" value="dylantest" />
    <property name="LOG_HOME" value="C:/Users/user/project/logs" />

    <!-- 控制台输出所有日志 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- 文件输出: 业务日志（只记录你主動輸出的日志） -->
    <appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Prudent>true</Prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/${SERVER_NAME}/info/info.%d{yyyy-MM-dd}.%i.log</FileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <MaxHistory>7</MaxHistory>
            <totalSizeCap>100GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>utf8</charset>
            <pattern>{"method":"%class.%method","server-name": "${SERVER_NAME}","datetime": "%d{yyyy-MM-dd HH:mm:ss.SSS}",%msg}%n</pattern>
        </encoder>
    </appender>

    <!-- 文件输出: 错误日志（只记录你主動輸出的錯誤日志） -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Prudent>true</Prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/${SERVER_NAME}/error/error.%d{yyyy-MM-dd}.%i.log</FileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <MaxHistory>7</MaxHistory>
            <totalSizeCap>100GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>utf8</charset>
            <pattern>{"method":"%class.%method","server-name": "${SERVER_NAME}","datetime": "%d{yyyy-MM-dd HH:mm:ss.SSS}","line": "%line",%msg}%n</pattern>
        </encoder>
    </appender>

    <!-- 只打印业务日志到文件（假设你的业务代码包是 com.myapp） -->
    <logger name="com.myapp" level="INFO" additivity="false">
        <appender-ref ref="INFO_FILE" />
    </logger>

    <!-- 只打印业务错误日志到文件 -->
    <logger name="com.myapp" level="ERROR" additivity="false">
        <appender-ref ref="ERROR_FILE" />
    </logger>

    <!-- 框架日志只输出到控制台，不输出到文件 -->
    <!-- Spring 框架 -->
    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- Hibernate 日志 -->
    <logger name="org.hibernate" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- 其他框架日志 -->
    <logger name="org.apache" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- 控制台输出所有日志 -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
